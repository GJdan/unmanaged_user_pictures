<?php
/**
 * Implements hook_schema_alter
 */
function unmanaged_user_pictures_main_schema_alter(&$schema){
  // Change the users.picture field so that a filepath can be stored in it.
  $spec = array(
      'type' => 'varchar',
      'length' => 256,
      'not null' => FALSE,
      'default' => '',
  );
  
  $schema['users']['fields']['picture_unmanaged'] = $spec;
}
